                <action android:name="com.google.firebase.appindexing.UPDATE_INDEX" />
            </intent-filter>
        </receiver>

        <service
            android:name=".indexing.AppIndexingService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>